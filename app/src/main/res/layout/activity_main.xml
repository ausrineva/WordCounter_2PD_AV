<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/fptxtinput"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:autofillHints="Write here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/fpspinner"
        android:layout_width="172dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toTopOf="@+id/fpbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:entries="@array/countingoptions"
        app:layout_constraintTop_toBottomOf="@+id/fptxtinput"
        app:layout_constraintVertical_bias="0.789" />

    <Button
        android:id="@+id/fpbutton"
        android:layout_width="214dp"
        android:layout_height="47dp"
        android:text="Count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fptxtinput"
        app:layout_constraintVertical_bias="0.723" />

    <TextView
        android:id="@+id/fptxt"
        android:layout_width="284dp"
        android:layout_height="121dp"
        android:gravity="center"
        android:text="YOU WRITE, WE COUNT"
        android:textColor="#800080"
        android:textSize="80px"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fptxtinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>